# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Database Configuration
DATABASE_URI=sqlite:///server_manager.db

# Encryption Key (32 bytes) - Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=encryption-key-change-in-production-must-be-32-bytes-long!

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=True

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=200 per day;50 per hour
RATELIMIT_STORAGE_URL=memory://
